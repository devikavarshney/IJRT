<div class="container pt-5 pb-5">
    <div class="row">
        <div class="col-6">
            <h1>Criminals</h1>
        </div>
    </div>

    <table class="table table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Criminal ID</th>
                <th scope="col">First Name</th>
                <th scope="col">Last Name</th>
                <th scope="col">Prison ID</th>
                <th scope="col">Arrested on</th>
                <th scope="col">Current status</th>
                <th scope="col" class="text-end">Action</th>
            </tr>
        </thead>
        <tbody>

            {{#each rows}}
            <tr>
                <th scope="row">{{this.crid}}</th>
                <td>{{this.fname}}</td>
                <td>{{this.lname}}</td>
                <td>{{this.prid}}</td>
                <td>{{this.arrested_on}}</td>
                <td>{{this.current_status}}</td>
                <td class="text-end">
                    <a href="/viewJud/{{this.crid}}/{{this.crid}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-eye"></i>
                        View</a>
                    <a href="/editJud/{{this.crid}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-pencil"></i>
                        Edit</a>
                    <a href="/jd/{{this.crid}}" type="button" class="btn btn-light btn-small"><i
                            class="bi bi-person-x"></i>
                        Delete</a>
                </td>
            </tr>
            {{/each}}

        </tbody>
    </table>
</div>
